        .collection-card:hover {
            transform: scale(1.05);
        }

        .collection-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 0.5rem;
        }

        .modal {
            display: none;
