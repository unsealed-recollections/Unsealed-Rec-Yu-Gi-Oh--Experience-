            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .card-detail-info h2 {
            color: #ffd93d;
            margin-bottom: 1rem;
            font-size: 2rem;
        }

        .card-detail-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin: 1rem 0;
        }

        .detail-stat {
            background: rgba(255, 255, 255, 0.1);
